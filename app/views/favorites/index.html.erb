<div class="wapper">
  <div class="container" >
    <h1>＊あなたの気になる一覧＊</h1>

    <table>
      <tr>
        <th>店名</th>
        <th>カテゴリー</th>
        <th>最寄駅</th>
        <th>予算</th>
      </tr>

      <% @favorite_shops.each do |shop| %>
        <tr>
          <td><%= shop.name %></td>
          <td><%= shop.category%></td>
          <td><%= shop.station %></td>
          <td><%= shop.payment %>円</td>
          <td><%= link_to '詳細', shop_path(shop.id) ,class: 'btn btn-default'%></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
